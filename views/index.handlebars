<div class="container">
    <div class="row">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">News Scraper - Explore the Latest CNN Headlines</h1>
                <p class="lead">Click on the Icons to comment on the article, or to save it.
                </p>
                <ul class="nav">
                    <li class="nav-item">
                        <button id="scrapeButton">Get new articles</button>
                    </li>
                    <li class="nav-item">
                        <button id="deleteEverythingButton">Delete all Articles (Includes Saved Articles)</button>
                    </li>
                    <li class="nav-item">
                        <button id="savedArticlesButton"><a href="/saved">Saved Articles</a></button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">

        <div id="articles">
            <ul>
                {{#each articleshbs}}
                <div class="articleBox" data-id={{_id}} title="{{title}}" link={{link}}>
                    <li>
                        <p>{{title}} <i class="fas fa-star" style={{saved}}></i><i class="fas fa-comment-dots" style={{noted}}></i></p> 
                        <p>Link: <a href={{link}}>{{link}}</a></p>
                    </li>
                </div>
                <br>
                {{else}}
                <h1>No Articles Scraped yet!</h1>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        
    </div>
    <!-- Button trigger modal -->
    <!-- Modal -->
    <div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Your notes here...</label>
                        <textarea class="form-control" id="yourNote" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger noteDelete">Delete Note</button>
                    <button type="button" class="btn btn-primary noteSubmit" id="#noteSubmit">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>